[Desktop Entry]
Version=1.0
Name=Orage Calendar
Comment=Desktop calendar
Exec=orage %F
Icon=org.xfce.orage
StartupNotify=true
MimeType=text/calendar;
Terminal=false
Type=Application
Categories=X-XFCE;Office;Calendar;GTK;
GenericName=Calendar
Actions=Today;NewAppointment;Preferences;

[Desktop Action Today]
Name=Show Today
Exec=orage --today

[Desktop Action NewAppointment]
Name=New Appointment
Exec=orage --new-appointment

[Desktop Action Preferences]
Name=Orage Preferences
Exec=orage --preferences